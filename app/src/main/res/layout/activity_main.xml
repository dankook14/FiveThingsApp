<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.android.fivethingsapp.MainActivity">

        <ImageView
            android:id="@+id/gd"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/gd" />

        <CheckBox
            android:id="@+id/gd_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="16dp"
            android:text="G-dragon"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/ty"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/ty" />

        <CheckBox
            android:id="@+id/ty_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="16dp"
            android:text="Taeyang"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/top" />

        <CheckBox
            android:id="@+id/top_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="16dp"
            android:text="T.O.P"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/dae"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/dae" />

        <CheckBox
            android:id="@+id/dae_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="16dp"
            android:text="Daesung"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/vi"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/vi" />

        <CheckBox
            android:id="@+id/vi_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="16dp"
            android:text="V.I"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/summary_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="I'm so curious!"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="16sp" />

        <Button
            android:id="@+id/who_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="who"
            android:layout_gravity="center"
            android:text="Who is he?" />

    </LinearLayout>
</ScrollView>